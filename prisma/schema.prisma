generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id
  email String  @unique
  name  String?
  picture  String?
  sessions Session[]
  gangId   Int?
  gang Gang? @relation(fields: [gangId], references: [id])
  isGangLeader Boolean?
  subscription String?
  notifications Notification[]
}

model Session {
  id        String   @id
  user_id    String
  user      User     @relation(references: [id], fields: [user_id], onDelete: Cascade)
  expires_at DateTime
}

model Gang {
  id        Int   @id @default(autoincrement())
  name      String
  latitude  Float
  longitude Float
  members   User[]
  isValidated Boolean @default(false)
}

model Notification {
  id Int   @id @default(autoincrement())
  title String
  body String
  users User[]
}